<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/hazelcast</property>
        <property name="connection.username">dpk</property>
        <property name="connection.password">dpk</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping class="com.hibernet.hibernet.model.student.Student" />
        <mapping class="com.hibernet.hibernet.model.instructor.Instructor" />
        <mapping class="com.hibernet.hibernet.model.instructorDetail.InstructorDetail" />
    </session-factory>
</hibernate-configuration>